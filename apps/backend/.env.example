###############################################################################
#  .env.example  –  Vorlage für Umgebungsvariablen
#
#  Lokal:   Kopieren als .env.development  (DB_HOST=localhost)
#  Docker:  Kopieren als .env.production   (DB_HOST=db)
###############################################################################

# ── Postgres ─────────────────────────────────────────────────────────────────
# WICHTIG: In Docker (.env.production) → DB_HOST=db  (Docker-Service-Name!)
#          Lokal  (.env.development)    → DB_HOST=localhost
DB_HOST=db
DB_PORT=5432
DB_USER=app
DB_PASS=secret
DB_NAME=appdb
DB_SSL=false
DATABASE_URL=postgres://app:secret@db:5432/appdb

# ── App ──────────────────────────────────────────────────────────────────────
NODE_ENV=production
PORT=3000
FRONTEND_URL=http://localhost
SEND_MAIL=false

# ── Auth ─────────────────────────────────────────────────────────────────────
JWT_SECRET=HIER_EIN_SICHERES_SECRET
ADMIN_EMAIL=tom@leonardsmedia.de

# ── Firma ────────────────────────────────────────────────────────────────────
COMPANY_NAME=LeonardsMedia
COMPANY_EMAIL=tom@leonardsmedia.de
COMPANY_WEBSITE=www.leonardsmedia.de

# ── OpenAI ───────────────────────────────────────────────────────────────────
OPENAI_API_KEY=sk-proj-DEIN_KEY_HIER

# ── E-Mail (IMAP/SMTP) ──────────────────────────────────────────────────────
MAIL=your_email@example.com
MAIL_PASS=your_mail_password
MAIL_EINGANG=imap.example.com
MAIL_AUSGANG=smtp.example.com
IMAP_SOURCE_FOLDER=INBOX.AI-INBOX
IMAP_DONE_FOLDER=INBOX.AI-DONE
IMAP_TRASH_FOLDER=INBOX.AI-TRASH
IMAP_SENT_FOLDER=INBOX.AI-SENT

# ── E-Mail Signatur ─────────────────────────────────────────────────────────
MAIL_SIGNATURE_NAME=Vorname Nachname
MAIL_SIGNATURE_POSITION=Position
MAIL_SIGNATURE_COMPANY=Firma
MAIL_SIGNATURE_PHONE=+49 123 456789
MAIL_SIGNATURE_WEBSITE=www.example.de

# ── Registrierung ────────────────────────────────────────────────────────────
REGISTER_MASTER_PW=DEIN_MASTER_PASSWORT_HIER

# ── JTL-Wawi MSSQL (optional) ───────────────────────────────────────────────
MSSQL_HOST=192.168.2.10
MSSQL_PORT=49948
MSSQL_DATABASE=eazybusiness
MSSQL_USER=jtl_readonly
MSSQL_PASSWORD=your_mssql_password_here


